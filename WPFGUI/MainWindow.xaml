<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGUI"
        mc:Ignorable="d"
        x:Class="WPFGUI.MainWindow"
        Title="GUI">
    <Grid Height="428" Width="990">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <ListBox Grid.Column="0" x:Name="AirlinesList"/>

        <ListBox Grid.Column="1" x:Name="AircraftList"/>

        <StackPanel Grid.Column="2" Margin="10">
            <Label Content="Name"/>
            <TextBox x:Name="txtName"/>
            <Label Content="Wingspan"/>
            <TextBox x:Name="txtWingspan"/>
            <Label Content="Max Cruise"/>
            <TextBox x:Name="txtMaxCruise"/>

            <StackPanel Orientation="Horizontal" Margin="0 10">
                <Button Name="AddBtn" Content="Add" Click="AddButton_Click"/>
                <Button Name="EditBtn" Content="Edit" Click="EditButton_Click"/>
                <Button Name="RemoveBtn" Content="Remove" Click="RemoveButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>