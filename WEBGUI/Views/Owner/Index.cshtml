@using DTO.Model;
@model WEBGUI.Models.OwnerViewModel;

@{
    ViewBag.Ttle = "title";

}

@using (Html.BeginForm("Index", "Owner", FormMethod.Get))
{
    if (Model.Airlines != null)
    {
        @Html.ListBoxFor(m => m.Airlines, Model.Airlines)
        <input type="submit" value="Get info">
    }
}

@using (Html.BeginForm("Index", "Owner", FormMethod.Post))
{
    @Html.HiddenFor(Model => Model.Airline.AirlineID)<br/>
    @Html.Label("Name")<br/>
    @Html.EditorFor(Model => Model.Airline.Name)<br/>
    <br/>

    <input type="submit" value="Add" name="submit">
    <input type="submit" value="Delete" name="submit">

}

